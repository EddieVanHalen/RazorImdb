@model Movie;

@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="mb-4">@Model.Title</h1>
            <h2 class="mb-4">@Model.Plot</h2>
            <div class="mb-4">@Model.Released</div>
            @if(@Model.Ratings is not null){
                @foreach(Rating rating in @Model.Ratings){
                    <div class="mb-4">@rating.Source : @rating.Value</div>
                }
            }
            <div class="mb-4">@Model.Director</div>
            <div class="mb-4">Cast : @Model.Actors</div>
            <div class="mb-4">@Model.Awards</div>

            <div class="text-center">
                <img
                    src="@Model.Poster"
                    class="rounded mx-auto d-block"
                    alt="Movie poster for @Model.Title"
                />

            </div>
        </div>
    </div>
</div>
